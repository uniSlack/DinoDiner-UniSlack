<UserControl x:Class="DinoDiner.PointOfSale.CurrencyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DinoDiner.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="405">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label Name="CurrencyLabel" FontSize="50">$1</Label>
        <Button Name="AddButton" Grid.Column="1" FontSize="50">+</Button>
        <Label Name="ValueDisplay" Grid.Column="2" FontSize="50">0</Label>
        <Button Name="SubtractButton" Grid.Column="3" FontSize="50">-</Button>
        <Label Name="ChangeDisplay" Grid.Column="4" FontSize="50">0</Label>
    </Grid>
</UserControl>
